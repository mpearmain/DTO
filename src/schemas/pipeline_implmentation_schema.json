{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Pipeline Implementation Schema",
  "type": "object",
  "properties": {
    "Implementation": {
      "type": "object",
      "properties": {
        "Version": { "type": "string" },
        "Engine": {
          "type": "string",
          "enum": [
            "Spark",
            "Flink",
            "pandas",
            "polars",
            "duckdb"
          ]
        },
        "CPU": {
          "type": "integer"
        },
        "RAM": {
          "type": "string"
        },
        "JobType": {
          "type": "string",
          "enum": [
            "batch",
            "streaming"
          ]
        },
        "ScheduleExecution": {
          "type": "string",
          "pattern": "^\\d{2}:\\d{2}:\\d{2}$"
        },
        "Interval": {
          "type": "string"
        },
        "Query": {
          "type": "string"
        }
      },
      "required": [
        "Version",
        "Engine",
        "CPU",
        "RAM",
        "JobType",
        "ScheduleExecution",
        "Query"
      ]
    }
  },
  "required": [
    "Implementation"
  ]
}
