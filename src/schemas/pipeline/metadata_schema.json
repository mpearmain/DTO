{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Pipeline Metadata Contract Schema",
  "type": "object",
  "properties": {
    "MetaDataContract": {
      "type": "object",
      "description": "This schema defines the structure for MetaDataContract.",
      "GeneralInformation": {
        "type": "object",
        "properties": {
          "Name": {
            "type": "string"
          },
          "Version": {
            "type": "string"
          },
          "Description": {
            "type": "string"
          },
          "Tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "Owner": {
            "type": "string"
          },
          "Contact": {
            "type": "object",
            "properties": {
              "Name": {
                "type": "string"
              },
              "Email": {
                "type": "string",
                "format": "email"
              }
            },
            "required": [
              "Name",
              "Email"
            ]
          },
          "SLA": {
            "type": "string"
          },
          "IncidenceResponseTime": {
            "type": "string"
          },
          "CodingStyleGuide": {
            "type": "string"
          },
          "VCSLocation": {
            "type": "string",
            "format": "uri"
          },
          "AccessRequestContact": {
            "type": "string"
          },
          "ResiliencyAndRecovery": {
            "type": "string"
          },
          "PerformanceMetrics": {
            "type": "string"
          },
          "ScalabilityInformation": {
            "type": "string"
          },
          "SecurityCompliance": {
            "type": "string"
          }
        },
        "required": [
          "Name",
          "Version",
          "Owner"
        ]
      },
      "Dependencies": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "DependencyName": {
              "type": "string"
            },
            "DependencyType": {
              "type": "string",
              "enum": [
                "internal",
                "external"
              ]
            },
            "DependencyDetails": {
              "type": "string"
            }
          },
          "required": [
            "DependencyName",
            "DependencyType"
          ]
        }
      },
      "Interfaces": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "Port": {
              "type": "object",
              "properties": {
                "Name": {
                  "type": "string"
                },
                "Type": {
                  "type": "string",
                  "enum": [
                    "input",
                    "output"
                  ]
                },
                "Services": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              },
              "required": [
                "Name",
                "Type"
              ]
            }
          },
          "required": [
            "Port"
          ]
        }
      },
      "InternalResources": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "DataContract": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "Contract": {
              "type": "object",
              "properties": {
                "Name": {
                  "type": "string"
                },
                "Description": {
                  "type": "string"
                },
                "Attributes": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "Name": {
                        "type": "string"
                      },
                      "Type": {
                        "type": "string",
                        "enum": [
                          "int",
                          "float",
                          "string",
                          "boolean",
                          "date",
                          "object"
                        ]
                      },
                      "Description": {
                        "type": "string"
                      },
                      "Source": {
                        "type": "string"
                      },
                      "Privacy": {
                        "type": "string"
                      },
                      "BusinessCriticality": {
                        "type": "string"
                      },
                      "Transformation": {
                        "type": "object",
                        "properties": {
                          "Steps": {
                            "type": "array",
                            "items": {
                              "type": "object",
                              "properties": {
                                "Description": {
                                  "type": "string"
                                },
                                "Dependencies": {
                                  "type": "array",
                                  "items": {
                                    "type": "object",
                                    "properties": {
                                      "Name": {
                                        "type": "string"
                                      },
                                      "Type": {
                                        "type": "string"
                                      },
                                      "Details": {
                                        "type": "string"
                                      }
                                    },
                                    "required": [
                                      "Name",
                                      "Type"
                                    ]
                                  }
                                }
                              },
                              "required": [
                                "Description"
                              ]
                            }
                          }
                        },
                        "required": [
                          "Steps"
                        ]
                      }
                    },
                    "required": [
                      "Name",
                      "Type"
                    ]
                  }
                },
                "DataGovernance": {
                  "type": "object",
                  "properties": {
                    "DataSteward": {
                      "type": "string"
                    },
                    "DataQuality": {
                      "type": "string"
                    },
                    "DataClassification": {
                      "type": "string"
                    },
                    "DataRetention": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "DataSteward"
                  ]
                },
                "AccessControl": {
                  "type": "object",
                  "properties": {
                    "AuthenticationService": {
                      "type": "string"
                    },
                    "AuthorizationService": {
                      "type": "string"
                    },
                    "AccessPolicies": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  },
                  "required": [
                    "AuthenticationService",
                    "AuthorizationService"
                  ]
                }
              },
              "required": [
                "Name",
                "Attributes"
              ]
            }
          },
          "required": [
            "Contract"
          ]
        }
      },
      "AuditInformation": {
        "type": "object",
        "properties": {
          "LastModified": {
            "type": "string",
            "format": "date-time"
          },
          "ModifiedBy": {
            "type": "string"
          }
        },
        "required": [
          "LastModified",
          "ModifiedBy"
        ]
      },
      "UsageDocumentation": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "DocName": {
              "type": "string"
            },
            "DocLink": {
              "type": "string",
              "format": "uri"
            }
          },
          "required": [
            "DocName",
            "DocLink"
          ]
        }
      },
      "Links": {
        "type": "array",
        "items": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "required": [
      "Type",
      "GeneralInformation",
      "Dependencies",
      "Interfaces"
    ]
  }
},
"required": ["MetaDataContract"]
}
